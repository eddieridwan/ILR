#resource_form
  %table
    %tr
      %th Title
      %td= @resource.title
    %tr
      %th Brief description
      %td= @resource.summary
    - if User.find_by_id(session[:user_id])
      %tr
        %th Description
        %td= @resource.description
    %tr
      %th Category
      %td= @resource.category
    %tr
      %th Organisation
      %td= @resource.organisation
    %tr
      %th Url
      %td= @resource.url
    %tr
      %th Image
      %td= @resource.image
    %tr
      %th Tags
      %td= @resource.tags
    %tr
      %th Your email address
      %td= @resource.submitted_by

  .links
    - if User.find_by_id(session[:user_id])
      = link_to 'Edit', edit_resource_path(@resource)
      = link_to 'Back', resources_path
    - else
      = link_to 'Back', list_resources_path